@import '/common/css/weui.wxss';
@import '/common/css/position.wxss';
@import '/common/css/border.wxss';

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.no-scroll {
  overflow: hidden;
}

.is-empty {
  /*height: 100%;*/
  /* overflow: hidden; */
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.is-empty image {
  width: 460rpx;
  margin: 0 auto 66rpx;
  display: block;
}
.is-empty text {
  line-height: 1;
  font-size: 30rpx;
  color: #666;
}
.list-empty {
  overflow: hidden;
  width: 100%;
  padding-right: 30rpx;
  box-sizing: border-box;
  text-align: center;
  padding-bottom: 20rpx;
}
.list-empty image {
  display: block;
  width: 50%;
  margin: 30rpx auto;
}
.list-empty text {
  line-height: 1;
  font-size: 30rpx;
  color: #666;
}

/* 蒙层 */
.mask {
  z-index: -1;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  transition: all .3s ease;
}
.mask.mask-show {
  z-index: 1024;
  background: rgba(0, 0, 0, .6);
}

.empty-e {
  width: 100%;
  height: 100rpx;
}
