.float-radio {
  position: fixed;
  width: 700rpx;
  height: 100rpx;
  box-sizing: border-box;
  background: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  bottom: 118rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 6px 6px 10px 0px rgba(212, 212, 212, .47);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.float-radio-wrap {
  flex: 1;
  display: flex;
  align-items: center;
}
.float-radio-close {
  width: 34rpx;
  height: 34rpx;
  margin: 0 20rpx;
}
.float-radio-face {
  width: 100rpx;
  height: 110rpx;
  background: #fff;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, .2);
  overflow: hidden;
  margin-top: -30rpx;
}
.float-radio-face image {
  width: 100%;
}
.float-radio-msg {
  margin-left: 20rpx;
}
.float-radio-msg > view {
  line-height: 1;
}
.float-radio-title {
  font-size: 28rpx;
  color: #1a1a1a;
}
.float-radio-others {
  font-size: 22rpx;
  color: #666;
  margin-top: 14rpx;
}
.float-radio-others > text {
  margin-right: 18rpx;
}

.float-radio-option {
  width: 64rpx;
  height: 64rpx;
  margin-right: 18rpx;
}