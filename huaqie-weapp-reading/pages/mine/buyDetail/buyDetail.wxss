/* pages/mine/buyDetail/buyDetail.wxss */
@import '/common/css/record.wxss';
@import '/common/css/float-radio.wxss';

.float-radio {
  bottom: 20rpx;
}

/* .book-menus {
  padding-bottom: 98rpx;
} */

.book-face {
  width: 100%;
  height: 470rpx;
  background: #f7f7f7;
  display: flex;
  justify-content: center;
  align-items: center;
}
.book-face image {
  display: block;
  width: 280rpx;
  height: 370rpx;
  box-shadow: 12rpx 12rpx 16rpx 6rpx rgba(99, 99, 99, .16);
}

.mode {
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx 22rpx;
  margin-bottom: 10rpx;
}
.mode.sp {
  padding: 0 0 0 30rpx;
}
.mode.sp .mode-title {
  padding: 37rpx 0 30rpx;
}
.mode-title {
  line-height: 38rpx;
  position: relative;
  padding: 37rpx 0 42rpx;
  display: flex;
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
  align-items: center;
  height: 38rpx;
}
.mode-title-border {
  width: 6rpx;
  height: 30rpx;
  background: #ffa42f;
  margin-right: 20rpx;
}
.mode-text {
  font-size: 30rpx;
  color: #4c4c4c;
  word-break: break-all;
  margin-top: -12rpx;
}
.mode-text text {
  word-break: break-all;
  font-size: 30rpx!important;
}


.check-open {
  color: #ffa42f;
  font-size: 30rpx;
  margin-left: 24rpx;
}

.book-radio {
  margin-bottom: 10rpx;
  background: #fff;
}
.radio-all {
  height: 94rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.radio-all image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.radio-all text {
  font-size: 26rpx;
  color: #666;
}
.radio-list {
  padding-left: 30rpx;
}
.radio-item {
  display: flex;
  padding-right: 30rpx;
  align-items: center;
  height: 118rpx;
  justify-content: space-between;
}
.radio-btn {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-right: 20rpx;
}
.radio-normal {
  display: flex;
  align-items: center;
  flex: 1;
}
.radio-normal.radio-end .radio-title {
  color: #a6a6a6;
}
.radio-normal.radio-running .radio-title {
  color: #ffa42f;
}
.radio-msg-wrap > view {
  line-height: 1;
}
.radio-title {
  font-size: 30rpx;
  color: #4d4d4d;
}
.radio-status {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #a6a6a6;
}
.radio-status > text {
  margin-right: 18rpx;
}
.radio-options {
  height: 100%;
  display: flex;
  align-items: center;
}
.radio-options > image {
  margin-left: 60rpx;
}
.radio-options image {
  display: block;
}
.radio-options .detail {
  width: 28rpx;
  height: 32rpx;
}
.radio-options button {
  display: block;
  border: 0;
  padding: 1rpx;
  margin-left: 60rpx;
}
.radio-options .share {
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
}

.buy-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  height: 98rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  display: flex;
}
.buy-btn > view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.buy-the-book {
  font-size: 30rpx;
  color: #1a1a1a;
}
.buy-the-book text {
  color: #ffa42f;
}
.add-vip {
  background: #ffa42f;
  color: #fff;
  font-size: 32rpx;
}
.add-vip text {
  color: #fff;
}

