/* pages/addMeal/addMeal.wxss */
@import '/components/mask/mask.wxss';
@import '/components/successMask/success-mask.wxss';
@import '/common/css/room-choose-box.wxss';

.add-meal .border-b::after {
  border-style: none none dashed none;
  border-color: #d9d9d9;
}

.meal-banner {
  width: 100%;
  height: 380rpx;
  overflow: hidden;
}
.meal-banner image {
  width: 100%;
  height: 100%;
}

/* 自助餐拼团 start */
.meal-rule {
  width: 100%;
  background: #fff;
  padding-top: 30rpx;
  padding-bottom: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.meal-rule-header > view {
  line-height: 1;
  padding-bottom: 30rpx;
}
.meal-title {
  font-size: 36rpx;
  color: rgb(51, 51, 51);
}
.meal-price {
  font-size: 24rpx;
}
.meal-price text {
  font-size: 36rpx;
}

.meal-rule-bottom {
  overflow: hidden;
}
.rule-bottom-header {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin: 30rpx 0 30rpx;
}
.rule-bottom-header image {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}
.rule-bottom-content {
  font-size: 24rpx;
  line-height: 1.5;
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}
.rule-bottom-end {
  line-height: 1;
  font-size: 24rpx;
}
/* 自助餐拼团 end */

/* 自助餐详情 start */
.meal-detail {
  background: #fff;
  overflow: hidden;
}
.meal-detail-header {
  height: 86rpx;
  line-height: 86rpx;
  font-size: 28rpx;
}
.meal-detail-list {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.meal-detail-list text {
  margin-right: 56rpx;
}
/* 自助餐详情 end */

.choose-meal {
  background: #fff;
  padding: 30rpx;
}
.choose-box-wrap {
  padding: 0;
}