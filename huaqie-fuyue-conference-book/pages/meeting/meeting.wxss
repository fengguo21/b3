/* pages/meeting/meeting.wxss */
@import '/common/css/meeting-time.wxss';

/* banner start */
.meeting-banner {
  width: 100%;
  height: 380rpx;
  overflow: hidden;
}
.meeting-banner swiper {
  height: 100%;
}
.meeting-banner .slide-image {
  width: 100%;
  height: 100%;
}
/* banner end */

/* 会议简介 start */
.meeting-summary {
  box-sizing: border-box;
  padding: 30rpx 34rpx 22rpx;
  background: #fff;
}
.meeting-summary-title {
  line-height: 1;
  font-size: 36rpx;
  color: #000;
  text-align: center;
  margin-bottom: 24rpx;
}
.meeting-summary-content {
  line-height: 1.7;
  font-size: 28rpx;
  color: rgb(128, 128, 128);
  word-break: break-all;
}
/* 会议简介 end */

/* 会议详情 start */
.meeting-detail {
  background: #fff;
}
.meeting-detail-list,
.meeting-detail-header {
  box-sizing: border-box;
  padding: 0 46rpx;
}
.meeting-detail-header {
  padding-top: 28rpx;
  padding-bottom: 28rpx;
}
.meeting-detail-header > view {
  float: left;
  width: 50%;
  height: 100%;
}
.meeting-detail-list.border-b::after {
  margin-left: 30rpx;
}
.meeting-detail-member {
  padding-left: 48rpx;
  box-sizing: border-box;
}
.meeting-detail-list,
.meeting-detail-type,
.meeting-detail-member {
  display: flex;
  align-items: center;
}
.meeting-detail-list image,
.meeting-detail-type image,
.meeting-detail-member image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 36rpx;
}
.meeting-detail-list view,
.meeting-detail-type view,
.meeting-detail-member view {
  font-size: 28rpx;
  color: rgb(26, 26, 26);
}

.meeting-detail-phone {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
}

.meeting-add-check {
  background: #fff;
  padding: 90rpx 0 36rpx;
}
.meeting-add-check .add-check-btn {
  width: 650rpx;
  height: 90rpx;
  background: rgb(190, 52, 42);
  margin: 0 auto;
  border-radius: 50rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
}
.meeting-add-check .add-check-btn.add-check-end {
  background: rgb(179, 179, 179);
}
/* 会议详情 end */

