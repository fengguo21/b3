swiper {
    height: 321.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 50%;
    text-align: center;
    margin-bottom: 10rpx;
}
.newest-box .newest-list navigator{
   
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 285rpx;
    height: 285rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-content{
    padding: 0;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
    margin-bottom: 0rpx;
}

.newest-box .newest-list .price{
    color: #ff8ec6;
}

.footer-version{
    color: lightgray;
    text-align: center;
    margin: 30rpx;
    font-size: 24rpx;
}

.footer-version image{
    width: 32rpx;
    height: 38rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 10rpx;
}
page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}
.navigator-hover{
    background: none;
}