:root,
html,
body {
  background: #ececec;
  font-family: '微软雅黑';
  line-height: 1;
}

.clearfix::after {
  clear: both;
  content: '';
  height: 0;
  overflow: hidden;
  display: table;
}

.bg {
  background: #ececec;
}

.white {
  background: white;
}

.container {
  font-size: 10pt;
  color: #353535;
}






.text {
  line-height: 1.5;
}



/*区域*/
.card {
  margin-top: 15rpx;
  background: #fff;
  padding: 25rpx 30rpx;
  border: 4px solid #ccc;
  border-radius: 15rpx;
}

.section-title {
  padding: 5px;
  font-size: 14px;
  border-left: 5px solid #ffa404;
}

/*list*/


.menu-item {
  border-bottom: 1px solid #eee;
  padding: 25rpx 0;
  color: #939393;
}



.menu-item:after {
  content: '.';
  height: 0;
  clear: both;
  overflow: hidden;
  display: block;
}

.menu-icon {
  float: left;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  margin-top: 1px;
}

.menu-text {
  vertical-align: middle;
  font-size: 35rpx;
  line-height: 50rpx;
}