/* mycard.wxss */
page{
  background: #f7f7f7;
  padding-top: 4rpx;
  padding: 0;
  margin:0;
  height: 100%;
}
scroll-view{
  height: 100%;
}
.card{
  width:666rpx;
  height: 404rpx;
  margin:36rpx 42rpx;
  background: white;
  display: flex;
  background: url('https://dn-huaqie.qbox.me/hyb-cardframe.png');
  background-size: 666rpx 404rpx;
  
  
  border-radius: 20rpx;
  position: relative
}
.totalnum{
  color:#ff55b5;
  font-size: 30rpx;
}
.surplus{
  color:#ff55b5;
  font-size: 30rpx;
}
.cardimg{
  width:192rpx;
  height:318rpx;
  display: inline-block;
  margin-top: 38rpx;
  margin-left: 26rpx;
  margin-right: 36rpx;
 
}
.cont{
  min-width: 400rpx;
}
.consumelist{
  float: right
}
.name{
  font-size: 34rpx;
  color: #404040;
  line-height: 1;
  margin-top: 64rpx;
}


.class,.proj,.balance,.total{
  font-size: 26rpx;
  color: #999999;
  line-height: 1;
  margin-top: 32rpx;
}
.icon{
  display: 
  block;
  height: 28rpx;
  width:28rpx;
  float: right;
  margin-right: 26rpx;
}
.consumelist{
  margin-right: 18rpx;
}
.empty{
  width:100%;
  height: 500rpx;
}
.empty image{
  width:372rpx;
  height: 320rpx;
  margin-top: 300rpx;
  margin-left: 215rpx;
  margin-bottom: 20rpx;
}
.empty text{
  display: block;
  text-align: center;
  
  color: #999999;
  font-size: 28rpx;
}
.tips{
	text-align: center;
	padding-top: 40rpx;
  padding-bottom: 40rpx;
	color: #cccccc;
  font-size: 25rpx;
}