.bookItem-wrap {
  padding: 12rpx 0 0 30rpx;
  background: #fff;
}

.bookItem {
  padding: 22rpx 0;
  overflow: hidden;
  display: flex;
}
.bookItem.border-b::after {
  margin-left: 180rpx;
}

/*
* 书的封面
*/
.book-face {
  width: 160rpx;
  height: 220rpx;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.book-face > image {
  width: 100%;
  height: 100%;
}
.book-face .icon-wrap {
  position: absolute;
  right: 14rpx;
  bottom: 14rpx;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, .5);
}
.book-face .icon-wrap image{
  width: 34rpx;
  height: 34rpx;
}


/*
* 书的详情样式
*/
.book-msg-wrap {
  flex: 1;
  overflow: hidden;
}
.book-msg {
  width: 100%;
}
.book-summery {
  width: 100%;
  word-break: break-all;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
  font-size: 24rpx;
}
.book-title {
  width: 100%;
  line-height: 1.5;
  margin: 20rpx 0 32rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.book-title text{
  display: inline-block;
  max-width: calc(100% - 70rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1;
  font-size: 30rpx;
  color: #1a1a1a;
  vertical-align: middle;
}
.book-title .hot,
.book-title .new {
  margin-left: 12rpx;
  vertical-align: middle;
}

.book-title .hot {
  /* width: 38rpx;
  height: 40rpx; */
  width: 28.5rpx;
  height: 30rpx;
}
.book-title .new {
  width: 58rpx;
  height: 26rpx;
}

.book-record {
  margin-top: 30rpx;
  overflow: hidden;
}
.book-record > view {
  float: left;
  margin-right: 40rpx;
  display: flex;
  align-items: center;
}
.book-record text {
  font-size: 22rpx;
  color: #999;
  line-height: 1.5;
  margin-left: 12rpx;
}
.book-record text,
.book-record image {
  display: block;
}

/*
* 跳转详情样式
*/
.book-more {
  width: 16rpx;
  position: relative;
  margin: 0 24rpx 0 26rpx;
}
.book-more image {
  width: 100%;
  height: 30rpx;
}