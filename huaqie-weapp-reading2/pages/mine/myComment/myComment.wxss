/* pages/mine/myComment/myComment.wxss */
@import '/common/css/record.wxss';

.book-menus {
  padding-bottom: 98rpx;
}

.book-face {
  width: 100%;
  height: 470rpx;
  background: #f7f7f7;
  display: flex;
  justify-content: center;
  align-items: center;
}
.book-face image {
  display: block;
  width: 280rpx;
  box-shadow: 12rpx 12rpx 16rpx 6rpx rgba(99, 99, 99, .16);
}

.mode {
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx 22rpx;
  margin-bottom: 10rpx;
}
.mode.sp {
  padding: 0 0 0 30rpx;
}
.mode.sp .mode-title {
  padding: 37rpx 0 30rpx;
}
.mode-title {
  line-height: 1;
  position: relative;
  padding: 37rpx 0 42rpx;
  display: flex;
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
  align-items: center;
}
.mode-title-border {
  width: 6rpx;
  height: 30rpx;
  background: #5b595d;
  margin-right: 20rpx;
}
.mode-text {
  font-size: 30rpx;
  color: #4c4c4c;
  word-break: break-all;
  margin-top: -12rpx;
}
.mode-text text {
  word-break: break-all;
  font-size: 30rpx!important;
}

.record-count {
  font-size: 32rpx;
  color: #999;
  font-weight: normal;
}